<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FYP_V2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FYP_V2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="FYP_V2">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="50">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" BorderThickness="1" BorderBrush="Black" Padding="20">
            <Button x:Name="importVerticesBtn" Click="importBtn_Click" Margin="10">Import Vertices File</Button>
            <Button x:Name="importEdgesBtn" Click="importBtn_Click" Margin="10">Import Edges File</Button>
        </StackPanel>
    </StackPanel>
</Window>
